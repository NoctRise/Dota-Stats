<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teamRecentMatchLayout"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <TextView
        android:id="@+id/matchResultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/teamRecentMatchLogoIV"
        app:layout_constraintTop_toTopOf="@+id/teamRecentMatchLogoIV" />

    <TextView
        android:id="@+id/againstTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="against"
        app:layout_constraintBottom_toBottomOf="@+id/matchResultTV"
        app:layout_constraintStart_toEndOf="@+id/matchResultTV"
        app:layout_constraintTop_toTopOf="@+id/matchResultTV" />

    <ImageView
        android:id="@+id/teamRecentMatchLogoIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_image_not_supported_24" />

    <TextView
        android:id="@+id/teamRecentMatchTeamNameIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/teamRecentMatchLogoIV"
        app:layout_constraintStart_toEndOf="@+id/teamRecentMatchLogoIV" />

    <TextView
        android:id="@+id/teamMatchDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastMatchTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamMatchDuration" />

</androidx.constraintlayout.widget.ConstraintLayout>